<style>
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2rem 0 1.5rem;
    }

    .section-header h2 {
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--gray-700);
        margin: 0;
    }

    .search-form {
        display: flex;
        gap: 1rem;
        max-width: 500px;
    }

    .search-form .form-control {
        flex: 1;
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
    }

    .search-form .btn {
        padding: 0.75rem 1.5rem;
    }

    .menu-header {
        padding: 1rem 1.5rem 0.5rem;
        font-size: 0.75rem;
        color: var(--gray-500);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .menu-sub {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .menu-sub .menu-item {
        margin: 0;
    }

    .menu-sub .menu-link {
        padding-left: 3.5rem;
        font-size: 0.875rem;
    }

    .customizer-toggle-btn {
        position: fixed;
        right: 2rem;
        top: 50%;
        transform: translateY(-50%);
        width: 48px;
        height: 48px;
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(105, 108, 255, 0.4);
        transition: all 0.3s ease;
        z-index: 1045;
    }

    .customizer-toggle-btn:hover {
        transform: translateY(-50%) scale(1.1);
    }

    .template-customizer {
        position: fixed;
        top: 0;
        right: -400px;
        width: 400px;
        height: 100vh;
        background: white;
        box-shadow: -4px 0 8px rgba(0, 0, 0, 0.1);
        transition: right 0.4s ease;
        z-index: 1050;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .template-customizer.open {
        right: 0;
    }

    .customizer-header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .customizer-header h3 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
        color: var(--gray-700);
    }

    .customizer-header p {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin: 0;
    }

    .customizer-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--gray-500);
    }

    .customizer-body {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem;
    }

    .customizer-section h4 {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--gray-500);
        margin-bottom: 1rem;
        letter-spacing: 0.5px;
    }

    .customizer-item {
        margin-bottom: 1.5rem;
    }

    .customizer-item label {
        display: block;
        font-size: 0.875rem;
        color: var(--gray-600);
        margin-bottom: 0.75rem;
    }

    .color-options {
        display: flex;
        gap: 0.5rem;
    }

    .color-option {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        cursor: pointer;
        border: 2px solid transparent;
        transition: all 0.2s;
    }

    .color-option.active {
        border-color: var(--gray-700);
        box-shadow: 0 0 0 2px white, 0 0 0 4px var(--gray-700);
    }

    .theme-options,
    .skin-options,
    .layout-options {
        display: flex;
        gap: 0.5rem;
    }

    .theme-option,
    .skin-option,
    .layout-option {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid var(--border-color);
        background: white;
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .theme-option.active,
    .skin-option.active,
    .layout-option.active {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }

    .switch-label {
        display: flex;
        align-items: center;
        justify-content: space-between;
        cursor: pointer;
    }

    .switch-input {
        width: 40px;
        height: 24px;
        -webkit-appearance: none;
        appearance: none;
        background-color: var(--gray-300);
        border-radius: 12px;
        position: relative;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .switch-input:checked {
        background-color: var(--primary-color);
    }

    .switch-input::before {
        content: '';
        position: absolute;
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background-color: white;
        top: 3px;
        left: 3px;
        transition: transform 0.3s;
    }

    .switch-input:checked::before {
        transform: translateX(16px);
    }
</style>